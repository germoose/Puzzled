<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- The buttons in Main Menu Activity -->
    <style name="activity_main_menu_button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- The Navigation buttons in PuzzleSelection Activity -->
    <style name="activity_puzzle_selection_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    
    <!-- The buttons for each turn in the Game Activty -->
    <style name="activity_game_button" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:text">R</item>
    </style>
    
    <!-- The textviews for statistics -->
      <style name="activity_statistics_textview" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
    </style>
    
</resources>
