<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.germuth.puzzled"
    android:installLocation="preferExternal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />
    <!-- Tell the system this app requires OpenGL ES 2.0. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- //TODO used for debugging -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="ca.germuth.puzzled.PuzzledApplication"
        android:allowBackup="true"
        android:icon="@drawable/puzzled_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity android:name="SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.germuth.puzzled.MainMenuActivity"
            android:label="@string/app_name" />
        <activity android:name="ca.germuth.puzzled.PuzzleSelectActivity" />
        <activity android:name="ca.germuth.puzzled.GameActivity" />
        <activity android:name="ca.germuth.puzzled.StatisticActivity" />
        <activity android:name="ca.germuth.puzzled.LeaderboardActivity" />
        <activity android:name="ca.germuth.puzzled.LeaderboardDetailActivity" />
        <activity android:name="ca.germuth.puzzled.ReplayActivity" />
    </application>

</manifest>